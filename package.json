        "@marko/webpack": "^1.2.5",
        "browserslist-useragent-regexp": "^1.3.1-beta",
        "css-hot-loader": "^1.4.4",
        "css-loader": "^3.4.1",
        "file-loader": "^4.3.0",
        "marko": "^4.18.29",
        "mini-css-extract-plugin": "^0.8.2",
        "node-sass": "^4.13.0",
