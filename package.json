{
    "name": "webapp-boilerplate",
    "version": "1.0.0",
    "description": "Boilerplate for Webapplications with Bootstrap, Marko.js & Lasso",
    "main": "server.js",
    "scripts": {
        "start": "node .",
        "start-app": "electron app.js",
        "dev": "gulp compile:sass && rollup -c rollup.config.js && browser-refresh server.js && node .",
        "compile": "gulp compile:sass && rollup -c rollup.config.js",
        "watch": "gulp watch",
        "package-mac": "gulp package-mac",
        "package-windows": "gulp package-windows",
        "package-linux": "gulp package-linux",
        "release": "gulp release"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Teddy95/webapp-boilerplate.git"
    },
    "author": "Andre Sieverding",
    "license": "WTFPL",
    "bugs": {
        "url": "https://github.com/Teddy95/webapp-boilerplate/issues"
    },
    "homepage": "https://github.com/Teddy95/webapp-boilerplate#readme",
    "dependencies": {
        "express": "^4.17.1",
        "gulp": "^4.0.2",
        "gulp-sass": "^4.0.2",
        "gulp-shell": "^0.7.1",
        "marko": "^4.18.0"
    },
    "devDependencies": {
        "browser-refresh": "^1.7.3",
        "browser-refresh-taglib": "^1.1.0",
        "electron": "^5.0.6",
        "electron-packager": "^14.0.0",
        "envify": "^4.1.0",
        "markoify": "^2.2.2",
        "rollup": "^1.16.4",
        "rollup-plugin-browserify-transform": "^1.0.1",
        "rollup-plugin-commonjs": "^10.0.1",
        "rollup-plugin-node-resolve": "^5.2.0"
    },
    "build": {
        "icon": {
            "mac": "assets/icons/icon.icns",
            "windows": "assets/icons/icon.ico",
            "linux": "assets/icons/icon.png"
        }
    }
}
