{
    "name": "webapp-boilerplate",
    "version": "3.0.0",
    "description": "Boilerplate for Node.js web applications with Express.js, Marko.js & Vite",
    "main": "app.js",
    "scripts": {
        "start": "cross-env NODE_ENV=production node --enable-source-maps app.js",
        "build": "rimraf dist && npm run build:server && npm run build:client",
        "build:client": "cross-env NODE_ENV=production vite build",
        "build:server": "cross-env NODE_ENV=production vite build --ssr app/router.js",
        "dev": "cross-env NODE_ENV=development node --enable-source-maps app.js",
        "debug": "node --inspect --enable-source-maps app.js",
        "deploy": "docker build -t schoeller.azurecr.io/<name> . && docker push schoeller.azurecr.io/<name>"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Teddy95/webapp-boilerplate.git"
    },
    "author": "Andre Sieverding",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/Teddy95/webapp-boilerplate/issues"
    },
    "homepage": "https://github.com/Teddy95/webapp-boilerplate#readme",
    "devDependencies": {
        "@marko/compiler": "^5.22.6",
        "@marko/vite": "^2.3.4",
        "rimraf": "^3.0.2",
        "sass": "^1.54.4",
        "vite": "^3.0.8"
    },
    "dependencies": {
        "@fortawesome/fontawesome-free": "^6.1.2",
        "@marko/express": "^2.0.1",
        "@popperjs/core": "^2.11.6",
        "body-parser": "^1.20.0",
        "bootstrap": "^5.2.0",
        "browserslist-useragent-regexp": "^3.0.2",
        "compression": "^1.7.4",
        "cookie-parser": "^1.4.6",
        "cross-env": "^7.0.3",
        "dotenv": "^16.0.1",
        "esm": "^3.2.25",
        "express": "^4.18.1",
        "express-form-data": "^2.0.18",
        "express-session": "^1.17.3",
        "js-cookie": "^3.0.1",
        "jwt-decode": "^3.1.2",
        "ky": "^0.31.1",
        "marko": "^5.21.9",
        "passport": "^0.6.0",
        "passport-github": "^1.1.0",
        "pixel-icons": "^1.7.0",
        "sprintf-js": "^1.1.2"
    },
    "type": "module"
}
